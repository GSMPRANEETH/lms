<!DOCTYPE html>
<html lang="en">
<head>
    <title>Reports</title>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <script src="https://cdn.tailwindcss.com"></script>
</head>
<body class="bg-gray-100 min-h-screen flex flex-col items-center">
    <div class="w-full max-w-2xl mt-10 bg-white rounded-lg shadow-lg p-8">
        <h1 class="text-2xl font-bold mb-6 text-center text-gray-800">Course Reports</h1>
        <%- include('notifications.ejs') %>
        <table class="w-full table-auto border-collapse">
            <thead>
                <tr>
                    <th class="px-4 py-2 border-b text-left">Course Name</th>
                    <th class="px-4 py-2 border-b text-left">Enrolled Students</th>
                </tr>
            </thead>
            <tbody>
                <% reports.forEach(report => { %>
                    <tr>
                        <td class="px-4 py-2 border-b"><%= report.course.name %></td>
                        <td class="px-4 py-2 border-b"><%= report.count %></td>
                    </tr>
                <% }) %>
            </tbody>
        </table>
        <div class="mt-6">
            <a href="/dashboard" class="bg-blue-500 text-white px-4 py-2 rounded hover:bg-blue-600 transition">Back to Dashboard</a>
        </div>
    </div>
</body>
</html>