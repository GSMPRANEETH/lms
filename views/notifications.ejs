<% if (messages && (messages.success || messages.error || messages.info)) { %>
  <div class="mb-4">
    <% if (messages.success) { %>
      <% messages.success.forEach(msg => { %>
        <div class="bg-green-100 border border-green-400 text-green-700 px-4 py-2 rounded mb-2">
          <%= msg %>
        </div>
      <% }) %>
    <% } %>
    <% if (messages.error) { %>
      <% messages.error.forEach(msg => { %>
        <div class="bg-red-100 border border-red-400 text-red-700 px-4 py-2 rounded mb-2">
          <%= msg %>
        </div>
      <% }) %>
    <% } %>
    <% if (messages.info) { %>
      <% messages.info.forEach(msg => { %>
        <div class="bg-blue-100 border border-blue-400 text-blue-700 px-4 py-2 rounded mb-2">
          <%= msg %>
        </div>
      <% }) %>
    <% } %>
  </div>
<% } %>