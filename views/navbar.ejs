<% if (typeof backUrl !== 'undefined' && backUrl) { %>
  <nav class="w-full flex items-center bg-blue-100 px-4 py-2 shadow mb-4">
    <a href="<%= backUrl %>" class="flex items-center text-blue-700 hover:underline font-semibold">
      <!-- Heroicon: Arrow Left -->
      <svg class="w-5 h-5 mr-1 inline" fill="none" stroke="currentColor" stroke-width="2" viewBox="0 0 24 24">
        <path stroke-linecap="round" stroke-linejoin="round" d="M15 19l-7-7 7-7" />
      </svg>
      <%= backLabel || "Back" %>
    </a>
  </nav>
<% } %>