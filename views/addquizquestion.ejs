<%- include('navbar.ejs', { backUrl: `/courses/${chapterId}`, backLabel: 'Back to Course' }) %>
<%- include('notifications.ejs') %>
<!DOCTYPE html>
<html lang="en">
<head>
  <title>Add Quiz Question | LMS</title>
  <meta charset="UTF-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1.0" />
  <script src="https://cdn.tailwindcss.com"></script>
</head>
<body class="bg-gradient-to-br from-blue-50 to-blue-100 min-h-screen flex flex-col items-center">
  <div class="w-full max-w-xl mt-10 bg-white rounded-lg shadow-lg p-8">
    <h1 class="text-2xl font-bold mb-6 text-blue-800 text-center">Add Quiz Question</h1>
    <form action="/chapters/<%= chapterId %>/quiz/add" method="POST">
      <input type="hidden" name="_csrf" value="<%= csrfToken %>">
      <div class="mb-4">
        <label class="block text-gray-700 font-medium mb-1">Question:</label>
        <input type="text" name="question" required class="w-full px-3 py-2 border border-gray-300 rounded focus:outline-none focus:ring-2 focus:ring-blue-400"/>
      </div>
      <div class="mb-4">
        <label class="block text-gray-700 font-medium mb-1">Answer:</label>
        <input type="text" name="answer" required class="w-full px-3 py-2 border border-gray-300 rounded focus:outline-none focus:ring-2 focus:ring-blue-400"/>
      </div>
      <button type="submit" class="w-full bg-blue-600 text-white py-2 rounded hover:bg-blue-700 font-semibold">Add Question</button>
    </form>
  </div>
</body>
</html>