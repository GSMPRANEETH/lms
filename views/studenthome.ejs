<div class="mb-6">
  <p class="text-lg font-semibold text-gray-700 mb-2">Enrolled courses:</p>
  <ul class="list-disc list-inside space-y-1">
    <% for (let course of enrolledCourses) { %>
      <li class="text-gray-800"><a href="/courses/<%= course.id %>" class="hover:underline"><%= course.name %></a></li>
    <% } %>
  </ul>
  <p class="text-lg font-semibold text-gray-700 mb-2 mt-6">Available courses:</p>
  <ul class="list-disc list-inside space-y-1">
    <% for (let course of availableCourses) { %>
      <li class="text-gray-800 flex items-center justify-between">
        <a href="/courses/<%= course.id %>" class="hover:underline"><%= course.name %></a>
        <form action="/enroll/<%= course.id %>" method="POST" class="inline ml-4">
          <input type="hidden" name="_csrf" value="<%= csrfToken %>">
          <button type="submit" class="bg-blue-500 text-white px-2 py-1 rounded hover:bg-blue-600 text-sm">Enroll</button>
        </form>
      </li>
    <% } %>
  </ul>
</div>
